doctype html
html
  head
    title Sporting Odds
    link(rel='stylesheet', href='stylesheets/bootstrap.min.css')
  body
    .container
      header.jumbotron.my-4
        h1.display-3 Sporting odds from all Aussie bookmakers
        //- p.lead Below are the list of upcoming NFL matches. Each table contains the teams start time, odds and bookmakers. The highest offered odds are in green and the lowest offered odds are in red.
      .row.text-center
        each event, index in events
          .col-lg.col-lg-12.mb-4
            .card-body
              h2.card #{events[index][0]} vs #{events[index][1]}
                h3.card Match Date: #{events[index][2]}
                  table.table-bordered
                    thead
                      tr(style='width:100%', border='1')
                        th.cardtext Site
                        th.cardtext #{events[index][0]}
                        th.cardtext #{events[index][1]}
                        th.cardtext Last Updated
                    tbody
                    each site, index1 in events[index][3]
                      tr
                        th.cardtext #{events[index][3][index1][0]}
                        if (events[index][3][index1][1] == events[index][4][0])
                          td(style={color: 'green'}) #{events[index][3][index1][1]}
                        else if (events[index][3][index1][1] == events[index][4][1])
                          td(style={color: 'red'}) #{events[index][3][index1][1]}
                        else
                          td.cardtext #{events[index][3][index1][1]}
                        if (events[index][3][index1][2] == events[index][4][2])
                          td(style={color: 'green'}) #{events[index][3][index1][2]}
                        else if (events[index][3][index1][2] == events[index][4][3])
                          td(style={color: 'red'}) #{events[index][3][index1][2]}
                        else
                          td.cardtext #{events[index][3][index1][2]}
                        td.cardtext #{events[index][3][index1][3]}